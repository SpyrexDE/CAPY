script/source = "extends Button


# Called when the node enters the scene tree for the first time.
func _ready() -> void:
	$Panel.pivot_offset = self.size / 2



func _on_button_mouse_entered() -> void:
	var t = create_tween()
	t.tween_property($Panel, \"scale\", Vector2(1.1, 1.1), 0.2).set_ease(Tween.EASE_OUT).set_trans(Tween.TRANS_EXPO)


func _on_button_mouse_exited() -> void:
	var t = create_tween()
	t.tween_property($Panel, \"scale\", Vector2(1,1), 0.2).set_ease(Tween.EASE_OUT).set_trans(Tween.TRANS_EXPO)


func _on_button_focus_entered() -> void:
	var t = create_tween()
	t.tween_property($Panel, \"scale\", Vector2(1.019, 1.1), 0.2).set_ease(Tween.EASE_OUT).set_trans(Tween.TRANS_EXPO)


func _on_button_focus_exited() -> void:
	var t = create_tween()
	t.tween_property($Panel, \"scale\", Vector2(1,1), 0.2).set_ease(Tween.EASE_OUT).set_trans(Tween.TRANS_EXPO)
